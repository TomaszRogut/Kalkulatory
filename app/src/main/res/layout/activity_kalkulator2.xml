<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tomek.kalkulatory.Kalkulator2Activity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.80"
            android:baselineAligned="false">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ekran"
                android:textSize="36dp"
                android:fontFamily="digital" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="7"
                android:id="@+id/klawisz7"
                android:textSize="28dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="8"
                android:id="@+id/klawisz8"
                android:textSize="28dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="9"
                android:id="@+id/klawisz9"
                android:textSize="28dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="/"
                android:id="@+id/klawiszDziel"
                android:textSize="28dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="4"
                android:id="@+id/klawisz4"
                android:textSize="28dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="5"
                android:id="@+id/klawisz5"
                android:textSize="28dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="6"
                android:id="@+id/klawisz6"
                android:textSize="28dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="*"
                android:id="@+id/klawiszMnoz"
                android:textSize="28dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="1"
                android:id="@+id/klawisz1"
                android:textSize="28dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="2"
                android:id="@+id/klawisz2"
                android:textSize="28dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="3"
                android:id="@+id/klawisz3"
                android:textSize="28dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="-"
                android:id="@+id/klawiszOdejmuj"
                android:textSize="28dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="C"
                android:id="@+id/klawiszC"
                android:textSize="28dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="0"
                android:id="@+id/klawisz0"
                android:textSize="28dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="."
                android:id="@+id/klawiszKropka"
                android:textSize="28dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:text="+"
                android:id="@+id/klawiszDodaj"
                android:textSize="28dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.32"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/klawiszWynik"
                android:textSize="28dp" />
        </TableRow>

    </LinearLayout>
</RelativeLayout>
